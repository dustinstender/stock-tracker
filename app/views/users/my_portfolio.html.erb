<h1> My Portfolio</h1>
<div class="search-area">
<h3>Search Stocks</h3>
<%= form_tag search_stock_path, remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock Symbol", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
      <i class="fas fa-search fa-2x"></i>
      <% end %>
    </div>
  </div>
<% end %>
</div>
<div class="id col-6">
  <%= render 'users/result' %>
</div>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/stocks' %>
<% end %>
